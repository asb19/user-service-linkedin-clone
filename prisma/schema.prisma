// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(cuid())
  email         String       @unique
  altEmail      String?
  firstName     String?
  lastName      String?
  contactNo     String?
  altContactNo  String?
  Password      String?
  userType      USER_TYPE    @default(individual)
  emailVerified Boolean      @default(false)
  smsVerified   Boolean      @default(false)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime?
  UserProfile   UserProfile?

}

model UserProfile {
  userId                         String                  @id
  photoUrl                       String?
  dob                            DateTime?               @db.Date
  gender                         GENDER?
  adhaarNo                       String?
  passportNo                     String?
  passportValidity               DateTime?               @db.Date
  passportPlaceAndCountryOfIssue String?
  currentLocationId              Int?
  homeLocationId                 Int?
  preferredLocations             Int[]
  createdAt                      DateTime                @default(now())
  updatedAt                      DateTime?
  mediaUrls                      String[]
  organisationId                 Int?                    @unique
  currentLocation                City?                   @relation(fields: [currentLocationId], name: "CurrentLocation", references: [id])
  homeLocation                   City?                   @relation(fields: [homeLocationId], name: "HomeLocation", references: [id])
  User                           User                    @relation(fields: [userId], references: [id])
  UserEducation                  UserEducation[]
  UserProfessionalDetail         UserProfessionalDetail?
  Organisation                   Organisation?           @relation(fields: [organisationId], name: "Organisation", references: [id])
}

model UserEducation {
  userId          String
  id              String        @id @default(cuid())
  degreeOrDiploma String
  field           String
  fromTime        DateTime?     @db.Date
  endTime         DateTime?     @db.Date
  description     String
  mediaUrls       String[]
  statusId        Int           @default(1)
  instituteId     Int?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime?
  isCurrent       Boolean       @default(false)
  UserProfile     UserProfile   @relation(fields: [userId], references: [userId], onDelete: Cascade, onUpdate: NoAction)
  Institute       Organisation? @relation(fields: [instituteId], references: [id])
}

model UserProfessionalDetail {
  id          String           @id @default(cuid())
  userId      String           @unique
  description String?
  keySkills   String[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime?
  UserProfile UserProfile?     @relation(fields: [userId], references: [userId])
  Experiences UserExperience[]

  UserCertificateDetails         UserCertificateDetails[]
  UserAwardsDetails              UserAwardsDetails[]
  UserTrainingDetails            UserTrainingDetails[]
  UserPublicationDetails         UserPublicationDetails[]
  UserPatentDetails              UserPatentDetails[]
  UserCurriculumDetails          UserCurriculumDetails?
  UserScholarshipDetails         UserScholarshipDetails[]
  UserGoogleCertificationDetails UserGoogleCertificationDetails[]
  UserScopusDetails              UserScopusDetails[]
  UserHindexDetails              UserHindexDetails[]
  UserHobbies                    UserHobbies?
}

model UserExperience {
  id                     String                 @id @default(cuid())
  professionalId         String
  designation            String
  organisationId         Int?
  industry               String
  statusCode             Int                    @default(1)
  fromTime               DateTime?              @db.Date
  endTime                DateTime?              @db.Date
  mediaUrls              String[]
  isCurrent              Boolean
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  Organisation           Organisation?          @relation(fields: [organisationId], references: [id])
  UserProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model UserCertificateDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  certificateName        String
  issuedBy               String
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  licenceNumber          String
  statusCode             Int                    @default(1)
  issuedAt               DateTime?              @db.Date
  certificateURL         String
  UserProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)


}

model UserAwardsDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  title                  String
  issuedBy               String
  issuedDate             DateTime               @db.Date
  awardsDescription      String?
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  mediaUrls              String[]
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserTrainingDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  title                  String
  organizer              String
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  startDate              DateTime               @db.Date
  endDate                DateTime               @db.Date
  trainingDecs           String?
  mediaUrls              String[]
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model UserPublicationDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  title                  String
  statusCode             Int                    @default(1)
  publisher              String?
  publishedAt            DateTime?              @db.Date
  publicationUrl         String?
  publicationDecs        String?
  mediaUrls              String[]
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserPatentDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  IPRTitle               String
  statusCode             Int                    @default(1)
  title                  String?
  patentDecs             String?
  validCountries         String[]
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserHobbies {
  id                     String                 @id @default(cuid())
  professionalId         String                 @unique
  hobbies                String[]
  mediaUrls              String[]
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserCurriculumDetails {
  id                     String                 @id @default(cuid())
  professionalId         String                 @unique
  activities             String[]
  mediaUrls              String[]
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserScholarshipDetails {
  id                     Int                    @id @default(autoincrement())
  professionalId         String
  name                   String
  scholarshipDecs        String?
  amount                 String
  issuedBy               String?
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserGoogleCertificationDetails {
  id                     String                 @id @default(cuid())
  professionalId         String
  title                  String
  issuedAt               DateTime?              @db.Date
  certificateURL         String?
  statusCode             Int                    @default(1)
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model UserScopusDetails {
  id                     Int                    @id @default(autoincrement())
  professionalId         String
  paperTitle             String
  issuedAt               DateTime?              @db.Date
  scopusUrl              String?
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  statusCode             Int                    @default(1)
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model UserHindexDetails {
  id                     Int                    @id @default(autoincrement())
  professionalId         String
  title                  String
  issuedAt               DateTime?              @db.Date
  indexUrl               String?
  createdAt              DateTime               @default(now())
  updatedAt              DateTime?
  statusCode             Int                    @default(1)
  userProfessionalDetail UserProfessionalDetail @relation(fields: [professionalId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model Organisation {
  id                 Int                  @id @default(autoincrement())
  fullName           String
  location           String?
  cityId             Int?
  zipcode            String?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime?
  estaclishedDate    DateTime?            @db.Date
  logo               String?
  affiliation        String?
  description        String?
  isInstitute        Boolean              @default(true)
  isVerified         Boolean              @default(false)
  City               City?                @relation(fields: [cityId], references: [id])
  UserEducation      UserEducation[]
  UserExperience     UserExperience[]
  OrgAwardsDetails   OrgAwardsDetails[]
  OrgTrainingDetails OrgTrainingDetails[]
  OrgCourseDetails   OrgCourseDetails[]
  OrgContactDetails  OrgContactDetails?
  OrgEventDetails    OrgEventDetails[]
  UserProfile        UserProfile?         @relation("Organisation")
}

model OrgAwardsDetails {
  id                String        @id @default(cuid())
  organisationId    Int?
  title             String
  statusCode        Int           @default(1)
  issuedBy          String
  issuedDate        DateTime      @db.Date
  awardsDescription String?
  createdAt         DateTime      @default(now())
  updatedAt         DateTime?
  mediaUrls         String[]
  Organisation      Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model OrgTrainingDetails {
  id             String        @id @default(cuid())
  organisationId Int?
  title          String
  statusCode     Int           @default(1)
  organizer      String
  startDate      DateTime      @db.Date
  endDate        DateTime      @db.Date
  trainingDecs   String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  mediaUrls      String[]
  Organisation   Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade, onUpdate: NoAction)

}

model OrgCourseDetails {
  id             String        @id @default(cuid())
  organisationId Int?
  title          String
  affiliatedTo   String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  mediaUrls      String[]
  statusCode     Int           @default(1)
  Organisation   Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model OrgEventDetails {
  id             String        @id @default(cuid())
  title          String
  organisationId Int?
  date           DateTime      @db.Date
  desc           String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  eventUrl       String
  statusCode     Int           @default(1)
  Organisation   Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model OrgContactDetails {
  id             String        @id @default(cuid())
  organisationId Int?          @unique
  emailId        String
  altEmailId     String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime?
  contactNumber  String
  altContactNum  String
  websiteUrl     String
  Organisation   Organisation? @relation(fields: [organisationId], references: [id], onDelete: Cascade, onUpdate: NoAction)
}

model Country {
  id        Int     @id @default(autoincrement())
  name      String
  phoneCode String
  State     State[]
}

model State {
  id        Int     @id @default(autoincrement())
  name      String
  fullName  String
  countryId Int
  Country   Country @relation(fields: [countryId], references: [id])
  City      City[]
}

model City {
  id                Int            @id @default(autoincrement())
  name              String
  fullName          String
  stateId           Int
  State             State          @relation(fields: [stateId], references: [id])
  currentLocationOf UserProfile[]  @relation("CurrentLocation")
  homeLocationOf    UserProfile[]  @relation("HomeLocation")
  organiseLocOf     Organisation[]

}

enum USER_TYPE {
  individual
  recruiter
}

enum GENDER {
  Male
  Female
  Other
}
